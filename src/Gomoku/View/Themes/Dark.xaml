<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:View.Themes"
                    xmlns:converters="clr-namespace:View.Converters">
    <SolidColorBrush x:Key="Background" Color="Black" />
    <SolidColorBrush x:Key="Board" Color="#2A2" />
    <RadialGradientBrush x:Key="WhiteBrush" GradientOrigin="0.25,0.25">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="White" Offset="0" />
            <GradientStop Color="#DDD" Offset="0.25" />
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="BlackBrush" GradientOrigin="0.25,0.25">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="White" Offset="0" />
            <GradientStop Color="Black" Offset="0.25" />
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>
    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="Red" />
        <Setter Property="FontSize" Value="24" />
    </Style>
</ResourceDictionary>