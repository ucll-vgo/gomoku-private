<UserControl x:Class="View.Controls.StoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Controls"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Ellipse x:Name="ellipse" Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:StoneControl}}, Path=Width}" Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:StoneControl}}, Path=Height}" />
</UserControl>
