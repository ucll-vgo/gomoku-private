<UserControl x:Class="View.Screens.IntroductionScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Padding="10" FontSize="32" Command="{Binding ToMainScreen}">Start</Button>
        <TextBlock Text="Gomoku" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" />
    </DockPanel>
</UserControl>
